<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    tools:context=".ui.home.cooks_list.cook_detail.CookDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cook_like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:background="@drawable/like_button_states"
            android:button="@null"
            android:contentDescription="@string/like_button_text_view"
            android:translationZ="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <com.github.captain_miao.optroundcardview.OptRoundCardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            android:translationZ="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            app:optRoundCardBackgroundColor="#F6F6F9"
            app:optRoundCardCornerRadius="30dp"
            app:optRoundCardElevation="4dp"
            app:optRoundCardLeftBottomCorner="false"
            app:optRoundCardRightBottomCorner="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/location_text_view"
                    style="@style/PoppinsRegular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="24dp"
                    android:gravity="center"
                    android:text="@string/location_text_view"
                    app:drawableStartCompat="@drawable/ic_location" />

                <RatingBar
                    android:id="@+id/cook_score_rating_bar"
                    style="@style/AppTheme.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="16dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:rating="3.5"
                    android:scaleX="1.7"
                    android:scaleY="1.7"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />

                <TextView
                    android:id="@+id/cook_score_text_view"
                    style="@style/PoppinsRegular18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/cook_score_text_view"
                    app:drawableEndCompat="@drawable/ic_star"
                    android:gravity="center_vertical" />

                <TextView
                    style="@style/PoppinsSemibold16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/about_me_text_view" />

                <TextView
                    android:id="@+id/description_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="53dp"
                    android:layout_marginBottom="12dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Urna et morbi pharetra ultrices venenatis ut nibh. Volutpat et adipiscing tellus quis ultrices sed vulputate. Blandit du"
                    tools:ignore="HardcodedText" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_dishes_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal"
                    android:paddingStart="21dp"
                    android:paddingEnd="21dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="4"
                    tools:listitem="@layout/my_dish_card" />
            </LinearLayout>

        </com.github.captain_miao.optroundcardview.OptRoundCardView>

        <ImageView
            android:id="@+id/dish_image_view"
            android:layout_width="283dp"
            android:layout_height="233dp"
            android:contentDescription="@string/cook_image_view"
            android:foregroundGravity="fill"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_foreground"
            tools:ignore="ImageContrastCheck"
            tools:src="@tools:sample/avatars" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="216dp"
            android:layout_height="51dp"
            android:foregroundGravity="center_horizontal"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dish_image_view">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:gravity="center|center_horizontal"
                android:orientation="vertical"
                android:showDividers="beginning">

                <TextView
                    android:id="@+id/cook_name_text_view"
                    style="@style/PoppinsSemibold18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/cook_name_text_view"
                    tools:text="@string/cook_name_text_view" />

                <TextView
                    android:id="@+id/dish_type_text_view"
                    style="@style/PoppinsLight12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/dish_type_text_view"
                    tools:text="@string/dish_type_text_view" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>