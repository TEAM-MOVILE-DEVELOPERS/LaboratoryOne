<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UMadeFoods" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_carmes√≠</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/Theme.UMadeFoods.ActionBarTheme
        </item> <!-- used for the back arrow on the action bar -->
    </style>

    <style name="Theme.UMadeFoods.ActionBarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <!-- THIS is where you can color the arrow and the overflow button! -->
        <item name="colorControlNormal">@color/white
        </item> <!-- sets the color for the back arrow -->
    </style>

    <style name="Buttons" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/sansation_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PoppinsSemibold18" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:letterSpacing">.03</item>
    </style>

    <style name="PoppinsSemibold16" parent="PoppinsSemibold18">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="PoppinsLight14" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="PoppinsLight12" parent="PoppinsLight14">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">.03</item>
    </style>

    <style name="PoppinsRegular14" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:letterSpacing">.02</item>
        <!--        Shadow Conf -->
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="PoppinsRegular12" parent="PoppinsRegular14">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PoppinsRegular9" parent="PoppinsRegular14">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="LinkTextView" parent="PoppinsRegular14">
        <item name="android:textColor">@color/primary_dark</item>
        <!--        Shadow Conf -->
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="RoundPhotos" parent="">
        <item name="cardCornerRadius">52dp</item>
        <item name="color">@color/white</item>
        <!--        Shadow Conf -->
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDy">100</item>
        <item name="android:shadowRadius">120</item>
    </style>

    <style name="Theme.UMadeFoods.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="actionMenuTextColor">@style/MenuOverflowTheme</item>-->
    </style>

    <!-- RatingBar Theme -->
    <style name="AppTheme.RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="minHeight">20dp</item>
        <item name="maxHeight">50dp</item>
    </style>

    <!-- Card Dishes Styles-->
    <style name="type_dish_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="name_dish_style">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="location_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="made_for_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="price_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="preparation_time_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

</resources>