<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UMadeFoods" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.UMadeFoods.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--
    <style name="Theme.UMadeFoods.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>
    <style name="Theme.UMadeFoods.Register" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>
    -->

    <style name="TitleTextView">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleTextView">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="NormalTextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LinkTextView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/link_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Theme.UMadeFoods.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UMadeFoods.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UMadeFoods.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- RatingBar Theme -->
    <style name="AppTheme.RatingBar" parent = "android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="minHeight">20dp</item>
        <item name="maxHeight">20dp</item>
    </style>

    <!-- Card Dishes Styles-->
    <style name="type_dish_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="name_dish_style">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="location_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="made_for_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="price_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="preparation_time_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

</resources>