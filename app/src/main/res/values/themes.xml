<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UMadeFoods" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.UMadeFoods.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--
    <style name="Theme.UMadeFoods.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>
    <style name="Theme.UMadeFoods.Register" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>
    -->

    <style name="TitleTextView">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleTextView">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="NormalTextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LinkTextView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/link_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>